<div class="col-md-3 col-sm-4 col-xs-6">
  <% if product.image.present? %>
    <%= link_to image_tag(product.image, size: Settings.products.size), "#" %>
  <% else %>
    <%= link_to image_tag(Settings.products.url, size: Settings.products.size), "#" %>
  <% end %>
  <h4><%= link_to product.name, "#" %></h4>
  <p><%= product.content.truncate(20) %></p>
  <p>Price: <%= product.price %></p>
</div>